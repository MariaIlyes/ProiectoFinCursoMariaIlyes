                    <input class="bigInput" type="text" id="telefono" name="telefono" maxlength="9"
                        value="<%= data[0].telefono %>" required>
                </div>
                <div class="input-group">
                    <label for="nif">NIF del usuario:</label>
                    <input class="bigInput" type="text" id="nif" name="nif" maxlength="12" value="<%= data[0].nif %>"
                        required>
                </div>
                <div class="input-group">
                    <label for="email">email del usuario:</label>
                    <input class="bigInput" type="email" id="email" name="email" maxlength="100"
                        value="<%= data[0].email %>" required>
                </div>
                <div class="containerBtns">
                    <br><br>
                    <input type="hidden" name="usuario" value="<%= user %>">
